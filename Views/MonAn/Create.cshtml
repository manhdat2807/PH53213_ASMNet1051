@model PH53213_ASMNet1051.Models.MonAn

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-danger">Thêm Món Ăn</h1>
<h4 class="text-pink">Thông Tin Món Ăn</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" class="p-4 border rounded shadow bg-light">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="TenMonAn" class="form-label text-danger"></label>
                <input asp-for="TenMonAn" class="form-control border-danger" />
                <span asp-validation-for="TenMonAn" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="MoTa" class="form-label text-danger"></label>
                <textarea asp-for="MoTa" class="form-control border-danger"></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="GiaTien" class="form-label text-danger"></label>
                <input asp-for="GiaTien" type="number" class="form-control border-danger" />
                <span asp-validation-for="GiaTien" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="HinhAnhURL" class="form-label text-danger"></label>
                <input asp-for="HinhAnhURL" class="form-control border-danger" />
                <span asp-validation-for="HinhAnhURL" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="MaDanhMuc" class="form-label text-danger"></label>
                <select asp-for="MaDanhMuc" class="form-select border-danger">
                    <option value="">-- Chọn danh mục --</option>
                    @foreach (var item in ViewBag.DanhMucList)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
                <span asp-validation-for="MaDanhMuc" class="text-danger"></span>
            </div>
            <div class="form-group form-check mb-3">
                <label class="form-check-label text-danger">
                    <input class="form-check-input border-danger" asp-for="TrangThai" /> @Html.DisplayNameFor(model => model.TrangThai)
                </label>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-danger text-white">Thêm Món Ăn</button>
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
