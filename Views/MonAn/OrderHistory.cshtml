@model IEnumerable<PH53213_ASMNet1051.Models.DonHang>

<h2>Lịch sử Đặt Món</h2>

<table class="table">
    <thead>
        <tr>
            <th>Hóa Đơn ID</th>
            <th>Ngày Đặt</th>
            <th>Tổng Tiền</th>
            <th>Trạng Thái</th>
            <th>Chi Tiết</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hoadon in Model)
        {
            <tr>
                <td>@hoadon.MaDonHang</td>
                <td>@hoadon.ThoiGianDat</td>
                <td>@hoadon.TongTien</td>
                <td>
                    @if (hoadon.TrangThai == "Đã giao")
                    {
                        <span class="badge bg-success">Đã giao</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Chưa giao</span>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>
