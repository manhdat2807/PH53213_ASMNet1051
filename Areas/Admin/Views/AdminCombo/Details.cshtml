@model PH53213_ASMNet1051.ViewModels.ComboViewModel

@{
    ViewData["Title"] = "Chi tiết Combo";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">Chi tiết Combo</h2>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4>@Model.TenCombo</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                @if (Model.HinhAnhURL != null && Model.HinhAnhURL.Length > 0)
                {
                    string imageBase64 = Convert.ToBase64String(Model.HinhAnhURL);
                    string imageSrc = $"data:image/png;base64,{imageBase64}";
                    <img src="@imageSrc" class="img-fluid rounded" alt="Hình ảnh combo">
                }
                else
                {
                    <p class="text-muted">Không có hình ảnh</p>
                }
            </div>

            <div class="col-md-8">
                <p><strong>Mô tả:</strong> @Model.MoTa</p>
                <p><strong>Giá tiền:</strong> @Model.GiaTien.ToString("N0") VND</p>
                <p><strong>Trạng thái:</strong> @(Model.TrangThai ? "Hoạt động" : "Không hoạt động")</p>

                <h5 class="mt-3">Danh sách món ăn trong combo:</h5>
                @if (Model.TenMonAn != null && Model.TenMonAn.Count > 0)
                {
                    <ul class="list-group">
                        @for (int i = 0; i < Model.TenMonAn.Count; i++)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @Model.TenMonAn[i]
                                <span class="badge bg-secondary">@Model.SoLuong</span>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">Không có món ăn nào trong combo.</p>
                }

                <div class="mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </div>
        </div>
    </div>
</div>
