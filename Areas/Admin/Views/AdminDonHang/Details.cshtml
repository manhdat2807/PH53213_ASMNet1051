@model PH53213_ASMNet1051.Models.DonHang

@{
    ViewData["Title"] = "Chi tiết Đơn Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Chi tiết Đơn Hàng</h2>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4>Đơn Hàng #@Model.MaDonHang</h4>
    </div>
    <div class="card-body">
        <p><strong>Người đặt:</strong> @Model.Id</p>
        <p><strong>Thời gian đặt:</strong> @Model.ThoiGianDat.ToString("dd/MM/yyyy HH:mm")</p>
        <p><strong>Tổng tiền:</strong> @Model.TongTien.ToString("N0") VND</p>
        <p><strong>Trạng thái:</strong> @Model.TrangThai</p>
        <p><strong>Phương thức thanh toán:</strong> @Model.PhuongThucThanhToan.TenPhuongThuc</p>

        <h5>Danh sách món ăn:</h5>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Món ăn</th>
                    <th>Số lượng</th>
                    <th>Giá tiền</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ChiTietDonHangs)
                {
                    <tr>
                        <td>@item.MonAn.TenMonAn</td>
                        <td>@item.SoLuong</td>
                        <td>@item.GiaTien.ToString("N0") VND</td>
                        <td>@((item.SoLuong * item.GiaTien).ToString("N0")) VND</td>
                    </tr>
                }
            </tbody>
        </table>

        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div>
