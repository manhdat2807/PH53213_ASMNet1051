@model List<PH53213_ASMNet1051.Models.DonHang>

@{
    ViewData["Title"] = "Danh sách đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Danh sách đơn hàng</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Mã đơn hàng</th>
            <th>Người đặt</th>
            <th>Thời gian đặt</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var donHang in Model)
        {
            <tr>
                <td>@donHang.MaDonHang</td>
                <td>@donHang.Id</td>
                <td>@donHang.ThoiGianDat.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@donHang.TongTien.ToString("N0") VND</td>
                <td>
                    <span class="badge @(donHang.TrangThai == "Đã giao" ? "bg-success" : donHang.TrangThai == "Đang giao" ? "bg-warning" : "bg-secondary")">
                        @donHang.TrangThai
                    </span>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@donHang.MaDonHang" class="btn btn-info btn-sm">Xem</a>
                    <a asp-action="Edit" asp-route-id="@donHang.MaDonHang" class="btn btn-primary btn-sm">Sửa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
